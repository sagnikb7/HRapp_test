<div class="row justify-content-center">
    <div class="col-4">
        <form method="POST" action="/employee/register" class="mt-4">
            <h3>Enter Basic Details</h3>
            <div class="form-group">
                <label for="name">Full Name</label>
                <input type="text" class="form-control" id="name" name="name" aria-describedby="name" placeholder="Ex: John Doe"
                    required>
            </div>
            <div class="form-group">
                <label for="age">Age</label>
                <input type="number" min="21" max="100" class="form-control" id="age" name="age" aria-describedby="age"
                    required>
            </div>

            <div class="form-group">
                <label for="designation">Example select</label>
                <select class="form-control" id="designation" name="designation">
                    <option value="Backend Dev">Backend Dev</option>
                    <option value="Frontend Dev">Frontend Dev</option>
                    <option value="Devops Engg">Devops Engg</option>

                </select>
            </div>

            <div class="form-group">
                <label for="employeeID">Employee ID</label>
                <input type="number" min="10000" max="99999" class="form-control" id="employeeID" name="employeeID"
                    aria-describedby="employeeID" placeholder="unique emp id" required>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>